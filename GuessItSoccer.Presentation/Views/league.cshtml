@{
    PageData["title"] = "GuessIt Soccer | League";
}
<body ng-controller="SingleLeagueCtrl">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>ID</th>
                <th>Team Name</th>
            </tr>
        </thead>
        <tbody>
            <tr ng-repeat="team in teamsFilter">
                <td>{{team.teamID}} </td>
                <td>{{team.name}} <span class="disabled" ng-show="!team.isEnabled">(Disabled)</span></td>
                <td><button ng-click="editTeam(team.name)" class="btn btn-default">Edit</button></td>
                <td>
                    <button ng-class="(team.isEnabled)?'btn-warning':'btn-success'" class="btn" ng-click="setTeamEnabled(team, !team.isEnabled)">
                        <span ng-show="!team.isEnabled">Enable</span>
                        <span ng-show="team.isEnabled">Disable</span>
                    </button>
                </td>
                <td><button ng-click="deleteTeam(team.name)" class="btn btn-danger">Delete</button></td>
            </tr>
        </tbody>
    </table>
</body>
