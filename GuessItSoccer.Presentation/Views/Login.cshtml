    <form ng-submit="login(userName, password)" class="col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4" role="form">
        <h2 class="text-center">Sign In</h2>
        <div class="form-group">
            <label for="InputEmail">Username or Email</label>
            <input  class="form-control" id="InputEmail" placeholder="Enter email"><!--type="email" -->
        </div>
        <div class="form-group">
            <label for="InputPassword">Password <a href="/password-recovery">(forgot password)</a></label>
            <input type="password" class="form-control" id="InputPassword" placeholder="Password">
        </div>
        <button type="submit" class="btn btn-sm btn-primary">Sign in</button>
    </form>
