@{
    PageData["title"] = "GuessIt Soccer | Leagues";
}
<body ng-controller="LeaguesCtrl">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>ID</th>
                <th>League Name</th>
            </tr>
        </thead>
        <tbody>
            <tr ng-repeat="league in leagues">
                <td>{{league.id}}</td>
                <td><a href="/league/{{league.id}}">{{league.name}} <span class="disabled" ng-show="!league.isEnabled">(Disabled)</span></a></td>
                <td><button class="btn btn-default">Edit</button></td>
                <td>
                    <button ng-class="(league.isEnabled)?'btn-warning':'btn-success'" class="btn" ng-click="setLeagueEnabled(league, !league.isEnabled)">
                        <span ng-show="!league.isEnabled">Enable</span>
                        <span ng-show="league.isEnabled">Disable</span>
                    </button>
                </td>
                <td><button ng-click="deleteLeague(league.name)" class="btn btn-danger">Delete</button></td>
            </tr>
            <tr>
	            
            </tr>
            
        </tbody>
    </table>
    <form ng-submit="">
        
    </form>
</body>
