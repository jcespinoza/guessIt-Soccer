@{
    PageData["title"] = "GuessIt Soccer | Leagues";
}
<body>
    <h2>{{currentLeague.Name}}</h2>
    <h3>Games for this league</h3>
    <table class="table table-striped table-hover">
        <tbody>
            <tr ng-repeat="game in games | orderBy:-Id">
                <td ng-hide="game.IsArchived">
                    <h3>{{game.HomeTeam.Name}} vs {{game.AwayTeam.Name}}</h3>
                    <div ng-show="game.Completed">
                        <h3>Result: {{game.Result.HomeTeamGoals}} - {{game.Result.AwayTeamGoals}}</h3>
                        <h3 ng-show="game.Result.HomeTeamGoals === game.Result.AwayTeamGoals && (game.Result.HomeTeamPenalties >= 1 || game.Result.AwayTeamPenalties) >= 1">
                            Penalties: {{game.Result.HomeTeamPenalties}} - {{game.Result.AwayTeamPenalties}}
                        </h3>
                        <div class="form-group">
                            <button ng-disabled="game.Completed" ng-click="editPrediction()">Predict Result</button>
                        </div>
                    </div>
                </td>
            </tr>
        </tbody>
    </table>
    <section id="newPredictionSection" class="row" ng-show="isAddingPrediction">
        <h3>New Prediction</h3>
        <form class="col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4" ng-submit="sendPrediction()">
            
        </form>
    </section>
</body>