@{
    PageData["title"] = "GuessIt Soccer | Leagues";
}
<body>
    <h2>Leagues I'm Suscribed To</h2>
    
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Country</th>
                <th>League Name</th>
            </tr>
        </thead>
        <tbody>
            <tr ng-repeat="league in suscribedLeagues">
                <td>{{league.Country}}</td>
                <td>{{league.Name}}</td>
                <td><a href="/users/{{user}}/leagues/{{league.Id}}/games">Games</a></td>
                <td>
                    <button class="btn btn-default" ng-click="unsuscribeFromLeague(league)">Unsuscribe</button>
                </td>
            </tr>
        </tbody>
    </table>
    <h2>All Available Leagues</h2>
    <div class="form-group">
        <input type="text" ng-model="searchCriteria" placeholder="Search Leagues" />
    </div>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Country</th>
                <th>League Name</th>
            </tr>
        </thead>
        <tbody>
            <tr ng-repeat="league in availableLeagues | filter: searchCriteria" ng-hide="league.IsArchived">
                <td>{{league.Country}}</td>
                <td>{{league.Name}}</td>
                <td><a href="/users/{{user}}/leagues/{{league.Id}}/games">Games</a></td>
                <td>
                    <button ng-click="suscribeToLeague(league)" class="btn btn-primary">Suscribe</button>
                </td>
            </tr>
        </tbody>
    </table>
</body>
